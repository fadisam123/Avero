@model User;
@inject UserManager<User> UserManager;
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    var user = await UserManager.GetUserAsync(User);
    var userId = user?.Id;

    var orders = @Model.order.OrderByDescending(p => p.order_date).ToList();
    long? orderId = null;
    long? orderDetailsId = null;
    int itemCount = 0;
    if (orders.Any())
    {
        orderId = orders.ElementAt(0).Id;
        itemCount = orders.ElementAt(0).order_details.ToList().Count();
    }

}

@section style {
    <style>
        body {
            background: linear-gradient(to right, #25c481, #25b7c4);
        }

        h1 {
            border-bottom: 1px solid white;
            font-size: 30px;
            color: #fff;
            text-transform: uppercase;
            font-weight: 300;
            text-align: center;
            margin-bottom: 15px;
        }

        table {
            width: 100%;
            table-layout: fixed;
        }

        .tbl-header {
            background-color: rgba(255,255,255,0.3);
        }

        .tbl-content {
            height: 300px;
            overflow-x: auto;
            margin-top: 0px;
            border: 1px solid rgba(255,255,255,0.3);
        }

        th {
            padding: 10px 7.5px;
            text-align: center;
            font-weight: 500;
            font-size: 15px;
            color: #fff;
            text-transform: uppercase;
        }

        td {
            padding: 8px;
            text-align: center;
            vertical-align: middle;
            font-weight: 300;
            font-size: 15px;
            color: #fff;
            border-bottom: solid 1px rgba(255,255,255,0.1);
        }

        .tbl-content tr:hover {
            background: linear-gradient(to left, #25c481, #25b7c4);
        }

        .form-control {
            width: 70px;
            margin-left: 60px;
        }

        input {
            width: 60px;
            border-radius: 5px;
        }

        .btn {
            width: 170px;
        }

        .logo {
            position: absolute;
            top: 80%;
            width: 60px;
            height: 60px;
        }


        .staticField {
            position: relative;
            display: block;
            width: 70px;
            margin: auto;
            padding: 0.375rem 0.75rem;
            border-radius: 0.375rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #212529;
            background: #dddddd;
        }

        .subQuantityBtn {
            position: absolute;
            left: -30px;
            width: 22px;
            top: 0;
            color: #ddd;
            border-radius: 50%;
        }

        .addQuantityBtn {
            position: absolute;
            right: -30px;
            width: 22px;
            top: 0;
            color: #ddd;
            border-radius: 50%;
        }
    </style>
}


    @if (itemCount != 0)
{

    var ordersDetails = orders.ElementAt(0).order_details.ToList();
    Double? subTotalPrice = 0.0;
    Double? totalPrice = 0.0;
    <h1 class="text-center text-white mt-2 pb-2 mb-0">YOUR CART</h1>
    <br />
    <section>
        <div class="tbl-header">
            <table cellpadding="0" cellspacing="0" border="0">
                <thead>
                    <tr>
                        <th>WHOLESEALER</th>
                        <th>IMAGE</th>
                        <th>PRODUCT</th>
                        <th>PRICE/OFFER PRICE</th>
                        <th>QUANTITY</th>
                        <th class="text-right"><span id="amount" class="amount">TOTAL</span> </th>

                    </tr>
                </thead>
            </table>
        </div>
        <div class="tbl-content">
            <table id="myTable" cellpadding="0" cellspacing="0" border="0">
                <tbody>

                    @for (int i = 0; i < ordersDetails.Count(); i++)
                    {
                        var temp = ordersDetails?.ElementAt(i);
                        var pName = temp?.product?.name;
                        var pPricePerUnit = temp?.product?.price_per_unit;
                        var pOfferEndDate = temp?.product?.offer_price_end_date;
                        var pOfferPrice = temp?.product?.offer_price;
                        var pImage = temp?.product?.product_imgs?.FirstOrDefault()?.img_name ?? "Default.jpg";
                        var pQuantity = temp?.quantity;

                        var pWholesealerName = temp?.product?.wholesealer?.name;
                        var pWholesealerImage = ordersDetails?.ElementAt(i)?.product?.wholesealer?.img_name ?? "Default.jpg";

                        <tr>
                            <td>
                                <a class="link-dark text-decoration-none" asp-controller="Home" asp-action="viewUser" asp-route-id="@temp?.product?.wholesealer?.Id">
                                    <span class="userImg d-flex align-items-center w-75">
                                        <img class="me-2 mw-100 rounded" src="~/img/users/@pWholesealerImage" alt="wholesealer image" asp-append-version="true" />
                                        <span class="userName">@pWholesealerName</span>
                                    </span>
                                </a>
                            </td>
                            <td>
                                <a class="link-dark" asp-controller="Home" asp-action="viewProduct" asp-route-id="@temp?.product?.Id">
                                    <span class="m-auto userImg d-flex align-items-center w-75">
                                        @* ------------------------------------------------------------------------------------------------- *@
                                        <img style="width: 100px; height: 100px" class="mw-100 rounded-circle" src="https://loremflickr.com/320/240/food?random=@i" alt="product image" asp-append-version="true" />
                                        @*<img style="width: 100px; height: 100px" class="mw-100 rounded-circle" src="~/img/products/@pImage" alt="product image" asp-append-version="true" />*@
                                    
                                    </span>
                                </a>
                            </td>
                            <td>@pName</td>

                            @if (pOfferEndDate >= DateTime.Now) // offer on
                            {
                                subTotalPrice += (pOfferPrice * pQuantity);
                                <td>@pOfferPrice S.P</td>
                                totalPrice += subTotalPrice;
                            }
                            else
                            {
                                subTotalPrice += (pPricePerUnit * pQuantity);
                                <td>@pPricePerUnit S.P</td>
                                totalPrice += subTotalPrice;
                            }

                            <td>
                                <span class="staticField">
                                    <a class="" asp-controller="Admin" asp-action="subQuantity" asp-route-id="@userId" asp-route-orderDetailsId="@temp?.Id">
                                        <span class="subQuantityBtn">
                                            <svg style="max-width: 100%; max-height: 100%" xmlns="http://www.w3.org/2000/svg" class="ionicon" viewBox="0 0 512 512"><title>Remove Circle</title><path d="M448 256c0-106-86-192-192-192S64 150 64 256s86 192 192 192 192-86 192-192z" fill="none" stroke="currentColor" stroke-miterlimit="10" stroke-width="32" /><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="32" d="M336 256H176" /></svg>
                                        </span>
                                    </a>



                                    @if (@temp.product.quantity_available <= @temp.quantity)
                                    {
                                        <span class="d-inline-block" tabindex="0" data-bs-toggle="tooltip" data-bs-title="No more available.">
                                            @pQuantity
                                        </span>
                                        <a style="color: #959595; pointer-events:none; opacity: 0.5" asp-controller="Admin" asp-action="addQuantity" asp-route-id="@userId" asp-route-orderDetailsId="@temp?.Id">
                                            <span class="addQuantityBtn">
                                                <svg style="max-width: 100%; max-height: 100%" xmlns="http://www.w3.org/2000/svg" class="ionicon" viewBox="0 0 512 512"><title>Add Circle</title><path d="M448 256c0-106-86-192-192-192S64 150 64 256s86 192 192 192 192-86 192-192z" fill="none" stroke="currentColor" stroke-miterlimit="10" stroke-width="32" /><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="32" d="M256 176v160M336 256H176" /></svg>
                                            </span>
                                        </a>

                                    }
                                    else
                                    {
                                        @pQuantity
                                        <a class="" asp-controller="Admin" asp-action="addQuantity" asp-route-id="@userId" asp-route-orderDetailsId="@temp?.Id">
                                            <span class="addQuantityBtn">
                                                <svg style="max-width: 100%; max-height: 100%" xmlns="http://www.w3.org/2000/svg" class="ionicon" viewBox="0 0 512 512"><title>Add Circle</title><path d="M448 256c0-106-86-192-192-192S64 150 64 256s86 192 192 192 192-86 192-192z" fill="none" stroke="currentColor" stroke-miterlimit="10" stroke-width="32" /><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="32" d="M256 176v160M336 256H176" /></svg>
                                            </span>
                                        </a>
                                    }

                                </span>
                            </td>
                            <td align="right"><span id="amount" class="amount">@subTotalPrice</span> SYP</td>

                        </tr>
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5"></td>
                        <td align="right"><strong>TOTAL = <span id="total" class="total">@totalPrice</span> SYP </strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </section>

    <h3 class="text-center text-white mt-3">Total items: @itemCount products</h3>

    <div class="section-1 ms-5 d-flex justify-content-center align-items-center">
        <a class="btn btn-primary ms-4 me-5" asp-controller="Admin" asp-action="checkOut" asp-route-id="@userId" asp-route-orderId="@orderId">checkout</a>
        <a class="btn btn-danger ms-4 me-5" asp-controller="Admin" asp-action="clearCart" asp-route-id="@userId" asp-route-orderId="@orderId">clear my cart</a>
        <a class="btn btn-dark ms-4 me-5" asp-controller="Home" asp-action="browseProducts" asp-route-orderId="@orderId">Continue Shopping</a>
    </div>
}
else
{
    <h1 class="text-center text-white mt-2 pb-3">NO ITEMS IN YOUR CART</h1>
    <div class="section-1 ms-5 mt-5 d-flex justify-content-center align-items-center">
        <a class="btn btn-primary disabled ms-4 me-5" asp-controller="Admin" asp-action="checkOut" asp-route-id="@userId" asp-route-orderId="@orderId">Checkout</a>
        <a class="btn btn-danger disabled ms-4 me-5" asp-controller="Admin" asp-action="clearCart" asp-route-id="@userId" asp-route-orderId="@orderId">Clear My Cart</a>
        <a class="btn btn-dark ms-4 me-5" asp-controller="Home" asp-action="browseProducts" asp-route-orderId="@orderId">Browse Products</a>
    </div>

}

